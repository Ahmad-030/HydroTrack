<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’§ ThirstooMeter Main Menu"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp"/>

        <!-- Body Weight Input Card -->
        <LinearLayout
            android:id="@+id/btnTarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/yellow_card"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš–ï¸ Body Weight Input"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your weight to calculate daily water needs"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Water Need Calculator Card -->
        <LinearLayout
            android:id="@+id/btnAddWater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/green_card"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’§ Water Need Calculator"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculate how many glasses or bottles you need daily"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- History Card -->
        <LinearLayout
            android:id="@+id/btnHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/red_card"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š History"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View your past water intake and calculations"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Tips Card -->
        <LinearLayout
            android:id="@+id/btnTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/purple_card"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¡ Tips"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stay hydrated with helpful water intake tips"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- About Card -->
        <LinearLayout
            android:id="@+id/btnAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/blue_card"
            android:padding="20dp"
            android:elevation="4dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â„¹ï¸ About"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learn about ThirstooMeter and its features"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Progress Button (hidden for now, can be added) -->
        <Button
            android:id="@+id/btnProgress"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>