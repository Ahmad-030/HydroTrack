<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’§ Water Need Calculator"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/green_card"
            android:padding="24dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Water Amount (ml)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/etWater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g., 500"
                android:inputType="number"
                android:textSize="18sp"
                android:padding="16dp"
                android:background="@android:color/white"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnCalculate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate ðŸ§®"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_rounded"
                android:padding="16dp"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter amount and tap Calculate"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:padding="16dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>